<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewSnapActivity">

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/message_view_text_x_y"
        android:layout_marginTop="@dimen/message_view_text_x_y"
        android:layout_marginEnd="@dimen/message_view_text_x_y"
        android:layout_marginBottom="@dimen/message_view_text_x_y"
        android:fontFamily="@font/comfortaa"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/snapImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/snapImageView"
        android:layout_width="386dp"
        android:layout_height="508dp"
        android:layout_marginStart="@dimen/received_image_view_x_y"
        android:layout_marginTop="@dimen/received_image_view_x_y"
        android:layout_marginEnd="@dimen/received_image_view_x_y"
        android:layout_marginBottom="@dimen/received_image_view_x_y"
        android:contentDescription="@string/content_description_view_of_sent_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageTextView"
        app:srcCompat="@drawable/picture_place_holder" />

</androidx.constraintlayout.widget.ConstraintLayout>